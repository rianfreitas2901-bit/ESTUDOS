programa {
  
  // Declarações das variáveis:
  inteiro n

  funcao inicio() {

    // Desenvolva um programa que leia um número inteiro e mostre se ele é PAR ou 
    // ÍMPAR.

    // Entrada de dados:
    escreva("Digite um número: ")
    leia(n)

    // Saída de dados:
    se (n % 2 == 0) {
      
      escreva("Esse número é par.")
    
    }

    senao {
      
      escreva("Esse número é ímpar.")
    
    } 
    
  }
}
